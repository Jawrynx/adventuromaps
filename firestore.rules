rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read other users' basic info (for admin purposes)
      allow read: if request.auth != null;
    }
    
    // Adventure and exploration data - allow public read access
    // Only allow write for authenticated users (you can restrict this further for admins only)
    match /adventure/{adventureId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
      
      // Nested routes and waypoints in adventures
      match /routes/{routeId} {
        allow read: if true; // Public read access
        allow write: if request.auth != null && 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
        
        match /waypoints/{waypointId} {
          allow read: if true; // Public read access
          allow write: if request.auth != null && 
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
        }
      }
    }
    
    match /exploration/{explorationId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
      
      // Nested routes and waypoints in explorations
      match /routes/{routeId} {
        allow read: if true; // Public read access
        allow write: if request.auth != null && 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
        
        match /waypoints/{waypointId} {
          allow read: if true; // Public read access
          allow write: if request.auth != null && 
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
        }
      }
    }
    
    match /guides/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /posts/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Admin-only collections (if you have any)
    // Uncomment and modify as needed
    /*
    match /admin/{document} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }
    */
    
    // Public data that anyone can read (if you have any)
    match /public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}