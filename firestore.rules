rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to read other users' basic info (for admin purposes)
      allow read: if request.auth != null;
    }
    
    // Adventure and map data - allow authenticated users to read
    // Only allow write for authenticated users (you can restrict this further for admins only)
    match /adventures/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /guides/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /waypoints/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /posts/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Admin-only collections (if you have any)
    // Uncomment and modify as needed
    /*
    match /admin/{document} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }
    */
    
    // Public data that anyone can read (if you have any)
    match /public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}